javascript    

const wrapper = document.querySelector('.wrapper');
const loglink = document.querySelector('.log_link');
const reglink = document.querySelector('.reg_link');
const btnpop = document.querySelector('.btnlogin_popup');
const icncls = document.querySelector('.icon-close');

reglink.addEventListener('click', () => {
    wrapper.classList.add('active');
});

loglink.addEventListener('click', () => {
    wrapper.classList.remove('active');
});

btnpop.addEventListener('click', () => {
    wrapper.classList.add('active-popup');
});
icncls.addEventListener('click', () => {
    wrapper.classList.remove('active-popup');
});

function func1() {
    var x = document.getElementById("userIp1");
    if (x.type === 'password') {
        x.type = 'text';
    } else {
        x.type = 'password';
    }
}

function func2() {
    var y = document.getElementById("userIp2");
    if (y.type === 'password') {
        y.type = 'text';
    } else {
        y.type = 'password';
    }
}
